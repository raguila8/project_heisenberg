if ($('.alert').length) {
	$('.alert').remove();
}

$('#edit-comment-<%=@comment.id%>').replaceWith("<%= escape_javascript render(:partial => '/comments/comments', :locals => { :comment => @comment }) %>");

<% if !@cancel %>
	var html = "<div class='flash-top alert alert-success'> Comment was updated!</div>";
	$('body').append(html);
	$('.flash-top').slideDown(500);
	setTimeout(function(){
    $('.flash-top').slideUp(500);
  }, 3500);

<% end %>
