if ($('.alert').length) {
	$('.alert').remove();
}

$('#edit-comment-<%=@comment.id%>').replaceWith("<%= escape_javascript render(:partial => '/comments/comments', :locals => { :comment => @comment }) %>");

<% if !@cancel %>
	var html = "<div class='flash-top alert alert-success text-center'> <img class='inline-icon g-mr-10' src='/success.png'> Comment was updated!</div>";
	$('body').append(html);
	$('.flash-top').slideDown(750);
	setTimeout(function(){
    $('.flash-top').slideUp(750);
  }, 4000);
	MathJax.Hub.Queue(["Typeset",MathJax.Hub, $('#comment-<%=@comment.id%>')[0]]);
<% end %>
