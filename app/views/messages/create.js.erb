<% if current_user.profile_image? %>
	$('<li class="replies"><img src="<%= current_user.profile_image.thumb.url %>" alt="profile image" /><p><%=@message.body%></p></li>').appendTo($('.messages ul'));

<% else %>
	$('<li class="replies"><img src="/einstein.png" alt="profile image" /><p><%=@message.body%></p></li>').appendTo($('.messages ul'));
<% end %>

$('.messages-form textarea').val(null);
$('.contact.active .preview').html('<span>You: </span><%=@message.body%>');
$(".messages").animate({ scrollTop: $(document).height() }, "fast");
MathJax.Hub.Queue(["Typeset",MathJax.Hub]);
					

