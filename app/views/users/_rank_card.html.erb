
<div class="leaderboard-item">
<% if signed_in? && current_user.id == user.id %>
	<div class="g-ph-5 problem-item-card problem-filter-card col-lg-offeset-2 col-md-offset-2 col-lg-8 col-md-8 col-sm-12 col-xs-12 border-green border-3 <%="g-mb-50" if rank_preview %>">

<% else %>
	<div class="g-ph-5 problem-item-card problem-filter-card col-lg-offeset-2 col-md-offset-2 col-lg-8 col-md-8 col-sm-12 col-xs-12">
<% end %>
	<li class="profile-li">
			<div class="profile-item-container">
			<div class="float-left g-mr-16">
					<h4 class="font-weight-600">
						<%=rank%>
					</h4>
				</div>

				<div class="profile-info-container">
					<a href="<%=user_path(user.id)%>"class="profile-thumb-container">
						<% if user.profile_image? %>
							<img class="profile-thumb" src="<%=user.profile_image.thumb.url%>"></img>
						<% else %>
							<img class="profile-thumb" src="/einstein.png"></img>
						<% end %>
					</a>
					<div class="profile-information-container">
						<div class="profile-information-username">
							<a href="<%=user_path(user.id)%>"class="username-link dark-grey-color font-size-16 font-weight-600"><%=user.username%></a>
						</div>
						<% if user.name and !user.name.blank?%>
							<div class="profile-information-name">
								<%= user.name %>
							</div>
						<% elsif user.occupation and !user.occupation.blank? %>
							<div class="profile-information-name">
								<%= user.occupation %>
							</div>
						<% elsif user.school and !user.school.blank? %>
							<div class="profile-information-name">
								<%= user.school %>
							</div>
						<% end %>
					</div>
				</div>
				<div class="float-right">
					<h4 class="font-weight-600">
						<% if params[:leaderboard] == "kudos" %>
							<img class="inline-icon-1 g-mr-5" title="User Score"src="/kudos_icon.png">
						<% elsif params[:leaderboard] == "problems-solved" %>
							<img class="inline-icon-1 g-mr-5" title="User Score"src="/count_icon.png">
						<% else %>
							<img class="inline-icon-1 g-mr-5" title="User Score"src="/score_icon.png">
						<% end %>

						<%=score%>
					</h4>
				</div>
			</div>
		</li>

</div>
</div>
