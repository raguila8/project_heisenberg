<% provide(:title, "Signup") %>
<div class="custom-form">
  <div class="limiter">
  	<div class="container-login100">
  		<div class="wrap-login100">
  			<div class="login100-form-title" style="background-image: url(/form-bg1.jpg);">
  				<span class="login100-form-title-1">
  					Sign up
  				</span>
  			</div>
  
  			<%= form_for(@user, :html => { :class => 'login100-form validate-form', novalidate: :true }) do |f| %>
    			<%= render 'shared/error_messages' %>
  
  				<div class="field wrap-input100 validate-input m-b-26">
  					<span class="label-input100">Username</span>
  					<%= f.text_field :username, class: "input100", placeholder: "Enter username" %>
  					<span class="focus-input100"></span>
  				</div>
  
    			<div class="field wrap-input100 m-b-26">
  					<span class="label-input100">Email</span>
      			<%= f.email_field :email, class: "input100", placeholder: "Enter email"%>
  					<span class="focus-input100"></span>
    			</div>
  
    			<div class="field wrap-input100 validate-input m-b-18">
  					<span class="label-input100">Password</span>
      			<%= f.password_field :password, class: "input100", placeholder: "Enter password" %>
  					<span class="focus-input100"></span>
    			</div>
  
    			<div class="field wrap-input100 validate-input m-b-18">
  					<span class="label-input100">Password Confirmation</span>
      			<%= f.password_field :password_confirmation, class: "input100", placeholder: "Re-enter password" %>
  					<span class="focus-input100"></span>
    			</div>	
  
    			<div class="actions container-login100-form-btn">
      			<%= f.submit "Sign up", class: "login100-form-btn" %>
    			</div>
  				<div id="signup-login-div">
  				<span id="signup-login-span">Have an account? <%= link_to "Log in", login_path, id: "signup-login-link" %></span>
  				</div>
  			<% end %>	
  		</div>
  	</div>
  </div>	
</div>



