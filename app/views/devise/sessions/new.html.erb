<% provide(:title, "Login") %>
<div class = "custom-form">
<div class="limiter">
	<div class="container-login100">
		<div class="wrap-login100 primary-bs">
			<div class="login100-form-title" style="background-image: url(/form-bg1.jpg);">
				<span class="login100-form-title-1">
					Sign in
				</span>
			</div>

			<%= form_for(resource, :html => { :class => 'login100-form validates-form', novalidate: :true }, as: resource_name, url: user_session_path) do |f| %>

				<%= render 'shared/error_messages' %>				
  
				<div class="field wrap-input100 validate-input m-b-26" data-validate="Email is required">
					<span class="label-input100">Email</span>
    			<%= f.email_field :email,  class: "input100", placeholder: "Enter email"%>
					<span class="focus-input100"></span>
  			</div>

  			<div class="field wrap-input100 validate-input m-b-18" data-validate="Password is required">
  				<span class="label-input100">Password</span>
    			<%= f.password_field :password, class: "input100", placeholder: "Enter password" %>
					<span class="focus-input100"></span>
  			</div>

  			<%# if devise_mapping.rememberable? -%>
    			<div class="flex-sb-m w-full p-b-30">
						<div class="contact100-form-checkbox">

							<label class="label-checkbox100" for="ckb1">Remember me
								<input class="input-checkbox100" id="ckb1" type="checkbox" name="user[remember_me]">
								<span class="checkmark"></span>
							</label>
						 </div>
						<span class="float-right" id="signup-login-span"><%= link_to "Forgot Password?", new_user_password_path, id: "forgot-password" %></span>

					<%# end -%>
					<%# if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>

						<div>
							<%# link_to "Forgot your password?", new_password_path(resource_name), class: "txt1" %>
						</div>
					<%# end -%>
					</div>

  			<div class="actions container-login100-form-btn">
    			<%= f.submit "Log in", class: "btn-lg g-mb-10 font-size-16 font-weight-400 g-rounded-20 g-btn-primary" %>
  			</div>
				<div id="signup-login-div">
					<span id="signup-login-span">New user? <%= link_to "Sign up now!", signup_path, id: "signup-login-link" %></span>
				</div>

			<% end %>
		</div>
	</div>
</div>	
</div>
