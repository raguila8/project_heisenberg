<% provide(:title, 'New Problem') %>
<% content_for :mathjax do %>
	<%= mathjax_tag %>
<% end %>

<h1>New Problem</h1>

<% if @problem.question && !@problem.question.empty? %>
	<div class="problem_content" style="margin-bottom: 40px;">
		<%= @problem.question %>
	</div>

<% end %>

<div style="text-align:center;">
	
	<%= render 'shared/error_messages' %>
	<%= form_for(@problem) do |f| %>
		<div class="col-md-4">
			<%= f.label :subject %>
			<%= f.text_field :subject, class: 'form-control' %>
		</div>

		<div class="col-md-4">
			<%= f.label :answer %>
			<%= f.text_field :answer, class: 'form-control' %>
		</div>
	
		<div class="col-md-4">
			<%= f.label :title %>
			<%= f.text_field :title, class: 'form-control' %>
		</div>

		<div class="col-md-4 col-md-offset-4">
			<%= f.label :difficulty %>
			<%= f.select(:difficulty, options_for_select([['1', 1], ['2', 2], ['3', 3]]), class: "form-control") %>
		</div>


		<%= f.text_area :question, cols: 100, rows: 20 %>
		<div class="col-md-offset-3 col-md-2">
		<%= f.submit "Preview Problem", class: "btn btn-primary" %>
		</div>
		&nbsp;&nbsp;&nbsp;&nbsp;
		<div class="col-md-2">
		<%= f.submit "Create Problem", class: "btn btn-primary" %>
		</div>
		&nbsp;&nbsp;&nbsp;&nbsp;
		<div class="col-md-2">
		<%= f.submit "Cancel", data: { confirm: "Are you sure?" }, class: "btn btn-primary" %>
		</div>
	<% end %>
	<br>
</div>
